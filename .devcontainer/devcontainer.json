{
    "name": "Python Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "extensions": [
        "ms-python.python"
    ],
    "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "pip install --upgrade pip"
}
